<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mitchelllichocki.elec390project.AddingContact">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mitchelllichocki.elec390project.AddingContact">
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SaveInfo"
        android:text="Save"
        android:layout_alignBaseline="@+id/editContactsButton"
        android:layout_alignBottom="@+id/editContactsButton"
        android:layout_toRightOf="@+id/Name1"
        android:layout_toEndOf="@+id/Name1" />

    <Button
        android:text="Edit Contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/editContactsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/Name1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Number1"
        android:hint="Phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tvEmergencyContact3"
        android:layout_alignRight="@+id/Number2"
        android:layout_alignEnd="@+id/Number2"
        android:id="@+id/Name3"
        android:hint = "Name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/Name3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Number3"
        android:hint="Phone" />

    <TextView
        android:text="Emergency Contact 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmergencyContact1"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/editContactsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint = "Name"
        android:ems="10"
        android:id="@+id/Name1"
        android:layout_marginTop="22dp"
        tools:layout_editor_absoluteX="41dp"
        android:layout_alignTop="@+id/tvEmergencyContact1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Emergency Contact 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmergencyContact3"
        android:textSize="18sp"
        android:layout_below="@+id/Number2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Name2"
        android:textSize="18sp"
        android:hint="Name"
        android:layout_below="@+id/tvEmergencyContact2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/Number2"
        android:hint="Phone"
        android:layout_below="@+id/Name2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Emergency Contact 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmergencyContact2"
        android:textSize="18sp"
        android:layout_below="@+id/Number1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Spinner
        android:id="@+id/spinner"
        android:entries="@array/spinner_item"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Number3"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner2"
        android:entries="@array/spinner_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </RelativeLayout>


    </ScrollView>
